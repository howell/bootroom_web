<h1>New Team</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @team, authenticity_token: false do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :league %>
    <%= f.text_field :league %>

    <%= f.submit "Create team",
      class: "btn btn-large btn-primary" %>
  <% end %>
    </div>
</div>
